{
  "name": "cogitari-platform",
  "version": "1.0.0",
  "description": "Sistema de Auditoria, Compliance e GestÃ£o Financeira - Cogitari Tech",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:watch": "npm run test:watch --workspace=packages/core",
    "test:e2e": "npm run test:e2e --workspace=apps/web",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist",
    "prepare": "husky",
    "security-check": "node scripts/security-scan.js"
  },
  "lint-staged": {
    "*": [
      "npm run security-check"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@prisma/config": "^7.4.0",
    "@types/node": "^20.11.0",
    "dotenv": "^17.3.1",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.4",
    "prisma": "^7.4.0",
    "supabase": "^2.76.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cogitari-Tech/Audit-Tool.git"
  },
  "author": "Cogitari Tech <devops@amuri.app>",
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^6.19.2"
  }
}
